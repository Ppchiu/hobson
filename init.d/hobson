#!/bin/sh
### BEGIN INIT INFO
# Provides:             hobson
# Required-Start:       $syslog $remote_fs
# Required-Stop:        $syslog $remote_fs
# Should-Start:         $local_fs
# Should-Stop:          $local_fs
# Default-Start:        2 3 4 5
# Default-Stop:         0 1 6
# Short-Description:    hobson - Persistent key-value db
# Description:          hobson - Persistent key-value db
### END INIT INFO


PATH=/home/change/.rvm/bin:/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin
HOBSON_ROOT=/home/change/hobson
HOBSON_CONFIG=/home/change/hobson/config.yml
PIDFILE=/home/change/hobson/hobson.pid
HOBSON="rvm use ruby-1.9.3-p0 do ruby /home/change/hobson_gem/bin/hobson work --pidfile $PIDFILE"
NAME=hobson
DESC=hobson


export HOBSON_ROOT
export HOBSON_CONFIG

test -x $DAEMON || exit 0

set -e

case "$1" in
  start)
        echo -n "Starting $DESC: "
        touch $PIDFILE
        chown change:change $PIDFILE
        if start-stop-daemon --start --background --umask 007 --pidfile $PIDFILE --chuid change:change --exec /bin/bash -- -c "$HOBSON"
        then
                echo "$NAME."
        else
                echo "failed"
        fi
        ;;
  stop)
        echo -n "Stopping $DESC: "
        if start-stop-daemon --stop --retry forever/QUIT/1 --oknodo --pidfile $PIDFILE
        then
                echo "$NAME."
        else
                echo "failed"
        fi
        rm -f $PIDFILE
        ;;

  restart|force-reload)
        ${0} stop
        ${0} start
        ;;

  status)
        echo -n "$DESC is "
        if start-stop-daemon --stop --signal 0 --pidfile ${PIDFILE}
        then
                echo "running"
        else
                echo "not running"
                exit 1
        fi
        ;;

  *)
        echo "Usage: /etc/init.d/$NAME {start|stop|restart|force-reload}" >&2
        exit 1
        ;;
esac

exit 0
